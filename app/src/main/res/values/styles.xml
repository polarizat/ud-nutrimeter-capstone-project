    --- Authentification ---

    <style name="Button.Auth" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    --- Headline 5 ---
    <style name="TextStyle.Nutrimeter.Headline5" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Nutrimiter" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAlignment">center</item>

        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    --- Authentification with email ---

    <style name="Widget.NutriMeter.Auth.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.NutriMeter.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>
    --- Hint ---

    <style name="TextAppearance.NutriMeter.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>