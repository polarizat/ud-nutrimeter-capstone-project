<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/date_navigator_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/me_move_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48_ICON"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_arrow_left_24" />


    <TextView
        android:id="@+id/me_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_72_MARGIN"
        android:layout_marginEnd="@dimen/dp_72_MARGIN"
        android:layout_weight="2"
        android:gravity="center"
        android:drawableStart="@drawable/ic_baseline_date_range_24"
        android:drawableTint="@color/colorSecondary"
        android:text="September" />

    <ImageView
        android:id="@+id/me_move_right"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_arrow_right_24" />
</LinearLayout>