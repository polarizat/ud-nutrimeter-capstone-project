<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    android:minWidth="360dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="24dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp">

    --- Title - Forgotten password? ---

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="360dp"
        android:layout_marginBottom="16dp"
        android:text="Forgotten password?"
        android:textSize="20sp"
        android:textStyle="bold" />

    --- Description ---

    <TextView
        android:id="@+id/lbl_your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="360dp"
        android:textSize="12sp"
        android:layout_marginBottom="16dp"
        android:text="Please enter the email address associated with your account to receive instruction for reseting your password." />

    --- Input Layout ---

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_signIn_restartPassword_email"
        style="@style/Widget.NutriMeter.Auth.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_signIn_restartPassword_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </com.google.android.material.textfield.TextInputLayout>

    --- Send btn ---

    <Button
        android:id="@+id/btn_singIn_resetPassword_send"
        style="@style/Button.Nutrimiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="end"
        android:text="Send" />


</LinearLayout>